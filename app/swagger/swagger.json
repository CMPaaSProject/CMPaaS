{
    "swagger": "2.0",
    "info": {
      "description": "This is the official api documentation of the services offered by publication system of the CMPaaS Project / Backend.",
      "version": "1.0.0",
      "title": "CMPaaS API (PPGI/UFES)",
      "contact": {
